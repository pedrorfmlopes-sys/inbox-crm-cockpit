<?xml version="1.0" encoding="UTF-8"?>
<OfficeApp
  xmlns="http://schemas.microsoft.com/office/appforoffice/1.1"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xmlns:bt="http://schemas.microsoft.com/office/officeappbasictypes/1.0"
  xsi:type="MailApp">

  <Id>f4c5f9f1-8a75-4a66-a2d6-7b2f0cb1b7e3</Id>
  <Version>1.0.0.0</Version>
  <ProviderName>Divitek</ProviderName>
  <DefaultLocale>pt-PT</DefaultLocale>

  <DisplayName DefaultValue="Inbox CRM Cockpit (STAGING)"/>
  <Description DefaultValue="Inbox CRM Cockpit â€” staging mode (Render)"/>
  <IconUrl DefaultValue="https://inbox-cockpit-staging.onrender.com/icon-32.png"/>
  <HighResolutionIconUrl DefaultValue="https://inbox-cockpit-staging.onrender.com/icon-80.png"/>
  <SupportUrl DefaultValue="https://inbox-cockpit-staging.onrender.com"/>

  <AppDomains>
    <AppDomain>https://inbox-cockpit-staging.onrender.com</AppDomain>
  </AppDomains>

  <Hosts>
    <Host Name="Mailbox"/>
  </Hosts>

  <Requirements>
    <Sets DefaultMinVersion="1.8">
      <Set Name="Mailbox" MinVersion="1.8"/>
    </Sets>
  </Requirements>

  <FormSettings>
    <Form xsi:type="ItemRead">
      <DesktopSettings>
        <SourceLocation DefaultValue="https://inbox-cockpit-staging.onrender.com/?view=taskpane"/>
        <RequestedHeight>450</RequestedHeight>
      </DesktopSettings>
    </Form>
    <Form xsi:type="ItemEdit">
      <DesktopSettings>
        <SourceLocation DefaultValue="https://inbox-cockpit-staging.onrender.com/?view=taskpane&amp;mode=compose"/>
      </DesktopSettings>
    </Form>
  </FormSettings>

  <Permissions>ReadItem</Permissions>

  <Rule xsi:type="RuleCollection" Mode="Or">
    <Rule xsi:type="ItemIs" ItemType="Message" FormType="Read"/>
    <Rule xsi:type="ItemIs" ItemType="Message" FormType="Edit"/>
  </Rule>

  <DisableEntityHighlighting>false</DisableEntityHighlighting>

  <VersionOverrides xmlns="http://schemas.microsoft.com/office/mailappversionoverrides" xsi:type="VersionOverridesV1_0">
    <Requirements>
      <bt:Sets DefaultMinVersion="1.8">
        <bt:Set Name="Mailbox" MinVersion="1.8"/>
      </bt:Sets>
    </Requirements>

    <Hosts>
      <Host xsi:type="MailHost">
        <DesktopFormFactor>
          <FunctionFile resid="residFunctionFile"/>

          <ExtensionPoint xsi:type="MessageReadCommandSurface">
            <OfficeTab id="TabDefault">
              <Group id="grpInboxCrmRead">
                <Label resid="residGroupLabel"/>
                <Control xsi:type="Button" id="btnOpenCockpitRead">
                  <Label resid="residButtonLabel"/>
                  <Supertip>
                    <Title resid="residButtonLabel"/>
                    <Description resid="residButtonTooltip"/>
                  </Supertip>
                  <Icon>
                    <bt:Image size="16" resid="residIcon16"/>
                    <bt:Image size="32" resid="residIcon32"/>
                    <bt:Image size="80" resid="residIcon80"/>
                  </Icon>
                  <Action xsi:type="ShowTaskpane">
                    <SourceLocation resid="residTaskpaneUrlRead"/>
                  </Action>
                </Control>
              </Group>
            </OfficeTab>
          </ExtensionPoint>

        </DesktopFormFactor>
      </Host>
    </Hosts>

    <Resources>
      <bt:Images>
        <bt:Image id="residIcon16" DefaultValue="https://inbox-cockpit-staging.onrender.com/icon-16.png"/>
        <bt:Image id="residIcon32" DefaultValue="https://inbox-cockpit-staging.onrender.com/icon-32.png"/>
        <bt:Image id="residIcon80" DefaultValue="https://inbox-cockpit-staging.onrender.com/icon-80.png"/>
      </bt:Images>

      <bt:Urls>
        <bt:Url id="residFunctionFile" DefaultValue="https://inbox-cockpit-staging.onrender.com/?view=functionfile"/>
        <bt:Url id="residTaskpaneUrlRead" DefaultValue="https://inbox-cockpit-staging.onrender.com/?view=taskpane"/>
      </bt:Urls>

      <bt:ShortStrings>
        <bt:String id="residGroupLabel" DefaultValue="CRM Cockpit (STG)"/>
        <bt:String id="residButtonLabel" DefaultValue="CRM Cockpit (STG)"/>
      </bt:ShortStrings>

      <bt:LongStrings>
        <bt:String id="residButtonTooltip" DefaultValue="Abrir o Inbox CRM Cockpit (STAGING)."/>
      </bt:LongStrings>
    </Resources>

    <VersionOverrides xmlns="http://schemas.microsoft.com/office/mailappversionoverrides/1.1" xsi:type="VersionOverridesV1_1">
      <Requirements>
        <bt:Sets DefaultMinVersion="1.8">
          <bt:Set Name="Mailbox" MinVersion="1.8"/>
        </bt:Sets>
      </Requirements>

      <Hosts>
        <Host xsi:type="MailHost">
          <DesktopFormFactor>
            <FunctionFile resid="residFunctionFile"/>

            <ExtensionPoint xsi:type="MessageReadCommandSurface">
              <OfficeTab id="TabDefault">
                <Group id="grpInboxCrmRead11">
                  <Label resid="residGroupLabel"/>
                  <Control xsi:type="Button" id="btnOpenCockpitRead11">
                    <Label resid="residButtonLabel"/>
                    <Supertip>
                      <Title resid="residButtonLabel"/>
                      <Description resid="residButtonTooltip"/>
                    </Supertip>
                    <Icon>
                      <bt:Image size="16" resid="residIcon16"/>
                      <bt:Image size="32" resid="residIcon32"/>
                      <bt:Image size="80" resid="residIcon80"/>
                    </Icon>
                    <Action xsi:type="ShowTaskpane">
                      <SourceLocation resid="residTaskpaneUrlRead"/>
                      <SupportsPinning>true</SupportsPinning>
                    </Action>
                  </Control>
                </Group>
              </OfficeTab>
            </ExtensionPoint>

            <ExtensionPoint xsi:type="MessageComposeCommandSurface">
              <OfficeTab id="TabDefault">
                <Group id="grpInboxCrmCompose11">
                  <Label resid="residGroupLabel"/>
                  <Control xsi:type="Button" id="btnOpenCockpitCompose11">
                    <Label resid="residButtonLabel"/>
                    <Supertip>
                      <Title resid="residButtonLabel"/>
                      <Description resid="residButtonTooltip"/>
                    </Supertip>
                    <Icon>
                      <bt:Image size="16" resid="residIcon16"/>
                      <bt:Image size="32" resid="residIcon32"/>
                      <bt:Image size="80" resid="residIcon80"/>
                    </Icon>
                    <Action xsi:type="ShowTaskpane">
                      <SourceLocation resid="residTaskpaneUrlCompose"/>
                      <SupportsPinning>true</SupportsPinning>
                    </Action>
                  </Control>
                </Group>
              </OfficeTab>
            </ExtensionPoint>

          </DesktopFormFactor>
        </Host>
      </Hosts>

      <Resources>
        <bt:Images>
          <bt:Image id="residIcon16" DefaultValue="https://inbox-cockpit-staging.onrender.com/icon-16.png"/>
          <bt:Image id="residIcon32" DefaultValue="https://inbox-cockpit-staging.onrender.com/icon-32.png"/>
          <bt:Image id="residIcon80" DefaultValue="https://inbox-cockpit-staging.onrender.com/icon-80.png"/>
        </bt:Images>

        <bt:Urls>
          <bt:Url id="residFunctionFile" DefaultValue="https://inbox-cockpit-staging.onrender.com/?view=functionfile"/>
          <bt:Url id="residTaskpaneUrlRead" DefaultValue="https://inbox-cockpit-staging.onrender.com/?view=taskpane"/>
          <bt:Url id="residTaskpaneUrlCompose" DefaultValue="https://inbox-cockpit-staging.onrender.com/?view=taskpane&amp;mode=compose"/>
        </bt:Urls>

        <bt:ShortStrings>
          <bt:String id="residGroupLabel" DefaultValue="CRM Cockpit (STG)"/>
          <bt:String id="residButtonLabel" DefaultValue="CRM Cockpit (STG)"/>
        </bt:ShortStrings>

        <bt:LongStrings>
          <bt:String id="residButtonTooltip" DefaultValue="Abrir o Inbox CRM Cockpit (STAGING)."/>
        </bt:LongStrings>
      </Resources>
    </VersionOverrides>

  </VersionOverrides>

</OfficeApp>
